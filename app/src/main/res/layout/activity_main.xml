<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E3D2D2">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:scaleType="centerCrop"
        android:src="@drawable/joy"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JEEVAN JYOTI SAHOO"
        android:layout_below="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/desg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Graphic Designer & Android Developer"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="#4A4848"
        />
    <TextView
        android:id="@+id/edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desg"
        android:text="EDUCATION"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veer Surendra Sai University of Technology, Burla"
        android:layout_below="@+id/edu"
        android:layout_marginLeft="20dp"
        android:textColor="#4A4848"
        />
    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chemical Engineering                                                 2019-2023"
        android:layout_below="@+id/college"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:textColor="#4A4848"
        />
    <TextView
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOOLS & SKILLS"
        android:layout_below="@id/branch"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/toolnskill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adobe Photoshop, Adobe Illustrator, C, C++, JAVA,           Python, Android Development"
        android:layout_below="@id/skills"
        android:layout_marginLeft="20dp"
        android:textColor="#4A4848"
        />
    <ImageButton
        android:id="@+id/linkedin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/linkedin"
        android:layout_below="@+id/toolnskill"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        />
    <ImageButton
        android:id="@+id/git"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/github"
        android:scaleType="centerCrop"
        android:layout_below="@+id/toolnskill"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        />
    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/facebook"
        android:scaleType="centerCrop"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/toolnskill"
        />
    <ImageButton
        android:id="@+id/insta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/instagram"
        android:scaleType="centerCrop"
        android:layout_below="@id/toolnskill"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="50dp"
        />
    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/twitter"
        android:scaleType="centerCrop"
        android:layout_below="@+id/toolnskill"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="50dp"
        />
</RelativeLayout>